{% extends 'base.html.twig' %} {% block content %}
<script src="/index.js"></script>
<div
  class="d-flex flex-column justify-content-end align-items-center background-picture"
>
  <a
    class="btn button-style mb-4"
    id="contacts-button"
    data-bs-toggle="modal"
    data-bs-target="#oder-modal"
  >
    prisijungti
  </a>
</div>
<!-- modal -->
<form method="post" action="{{ path('app_login') }}" id="login-form">
  <div
    class="modal fade"
    id="oder-modal"
    data-bs-backdrop="static"
    data-bs-keyboard="false"
    tabindex="-1"
    aria-labelledby="oder-modalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="staticBackdropLabel">užsakymas</h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">
          <div class="container">
            <form novalidate id="submit-form-modal">
              <div class="mb-3 w-100">
                <label class="form-label">el. paštas</label>
                <input
                  type="email"
                  value=""
                  name="email"
                  id="inputEmail"
                  class="form-control"
                  autocomplete="email"
                  required
                  autofocus
                />
              </div>
              <div class="mb-3 w-100">
                <label class="form-label">Slaptažodis</label>
                <input
                  type="password"
                  name="password"
                  id="inputPassword"
                  class="form-control"
                  autocomplete="current-password"
                  required
                />
              </div>
            </form>
          </div>
        </div>
        <input
          type="hidden"
          name="_csrf_token"
          value="{{ csrf_token('authenticate') }}"
        />
        <div class="modal-footer">
          <button
            type="submit"
            class="btn button-style mb-3"
            id="send-order-button"
          >
            siųsti
          </button>
        </div>
      </div>
    </div>
  </div>
</form>
<div class="container">
  <section
    class="row mt-3 d-flex justify-content-center mb-3"
    id="card-section"
  >
    <h1 class="d-flex justify-content-center mb-4">įmonės naujienos</h1>
    <div class="col-10 col-md-10 col-lg-5 mb-3" id="text-cards">
      {% for blog in blogs %} {% if blog.slug == 1 %}
      <article class="card border-0">
        <div class="overlay-container d-flex justify-content-center">
          <img
            src="/img_front/{{ blog.imagename }}"
            class="img-fluid img-width"
            alt="."
          />
          <div class="overlay-content">
            <span
              ><a
                class="hover-link"
                href="{{ path('blog_posts', { slug: blog.slug }) }}"
                >Read More</a
              ></span
            >
          </div>
        </div>
        <div class="card-body">
          <h3 class="card-title">Blog Title</h3>
          <span class="span-bold">2022-11-20</span>
          <p class="card-text">
            ARTIFICIAL INTELLIGENCE SOLUTIONS SUPPORT QUICK AND FLAWLESS
            TRANSPORT PLANNING
          </p>
        </div>
      </article>

      <div class="d-flex justify-content-center mt-3">
        <a href="{{ path('company_news') }}" class="btn button-style"
          >daugiau</a
        >
      </div>
    </div>
    {% endif %} {% endfor %}
    <div class="col-12 col-md-8 col-lg-5" id="grid-cards">
      <div class="showcase-grid" id="grid">
        {% for blog in blogs %} {% for i in 2..5 %} {% if blog.slug == i %}
        <article class="card">
          <div class="overlay-container">
            <img
              src="/img_front/{{ blog.imagename }}"
              alt="."
              class="card-img-top"
            />
            <div class="overlay-content">
              <a
                class="hover-link"
                href="{{ path('blog_posts', { slug: blog.slug }) }}"
                >Read More</a
              >
            </div>
          </div>
          <div class="card-body">
            <h5 class="card-title">Blog Title</h5>
            <span class="span-bold">2022-11-20</span>
            <p class="card-text card">
              Some quick example text that will be seen in our blog article part
            </p>
          </div>
        </article>

        {% endif %} {% endfor %}{% endfor %}
      </div>
    </div>
  </section>
</div>
<hr />
