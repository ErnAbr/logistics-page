<div class="container">
  <section class="row" id="contact-form">
    <div
      class="col-12 col-md-12 col-lg-6 d-flex flex-column justify-content-start align-items-start mt-3"
    >
      <h1>Tapkite mūsų klientu</h1>
      <h5>parašykite mums</h5>
      <div class="col w-100">
        <form novalidate id="submit-form" method="post" action="">
          <div class="form-floating mb-3">
            <input
              type="text"
              id="name-form"
              class="form-control"
              placeholder="jūsų vardas"
              required
              name="client-name"
            />
            <label for="text">jūsų vardas</label>
            <div class="invalid-feedback">įveskite savo vardą</div>
          </div>
          <div class="form-floating mb-3">
            <input
              type="email"
              id="email"
              class="form-control"
              placeholder="el. paštas"
              required
              name="client-email"
            />
            <label for="email">el. paštas</label>
            <div class="invalid-feedback">neteisingas el. Paštas</div>
          </div>
          <div class="form-floating">
            <textarea
              type="text"
              id="order-text"
              placeholder="Jūsų Užklausa"
              class="form-control t-area-style"
              required
              name="client-message"
            ></textarea>
            <label for="text">jūsų užklausa</label>
            <div class="invalid-feedback">įveskite savo užklausą</div>
            <div id="order-form" class="form-text">
              Tikslias užsakymo vykdymo sąlygas pateiksime per 1 d.d. nuo jūsų
              užklausos pateikimo
            </div>
          </div>
          <input
            type="submit"
            value="išsiųsti"
            class="btn button-style mt-3 mb-3"
            id="submit-form-button"
          />
        </form>

        {% if error is defined %}
        <div
          class="alert alert-dismissible alert-danger d-flex align-items-center"
          role="alert"
          id="registraton-error"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            fill="currentColor"
            class="bi bi-x-octagon-fill"
            viewBox="0 0 16 16"
          >
            <path
              d="M11.46.146A.5.5 0 0 0 11.107 0H4.893a.5.5 0 0 0-.353.146L.146 4.54A.5.5 0 0 0 0 4.893v6.214a.5.5 0 0 0 .146.353l4.394 4.394a.5.5 0 0 0 .353.146h6.214a.5.5 0 0 0 .353-.146l4.394-4.394a.5.5 0 0 0 .146-.353V4.893a.5.5 0 0 0-.146-.353L11.46.146zm-6.106 4.5L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 1 1 .708-.708z"
            />
          </svg>
          <div class="mx-3">{{ error }}</div>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="alert"
            aria-label="Close"
          ></button>
        </div>
        <script>
          window.scrollTo(0, 5000);
        </script>
        {% endif %} {% if app.flashes('success')[0] is defined %}
        <div
          class="alert alert-dismissible alert-success d-flex align-items-center"
          role="alert"
          id="registraton-error"
        >
          <svg
            class="bi flex-shrink-0 me-2"
            width="24"
            height="24"
            role="img"
            aria-label="Success:"
          >
            <use xlink:href="#check-circle-fill" />
          </svg>
          <div>jūsų užklausa priimta</div>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="alert"
            aria-label="Close"
          ></button>
        </div>
        <script>
          window.scrollTo(0, 5000);
        </script>
        {% endif %}
      </div>
    </div>
    <div class="col-12 col-md-12 col-lg-6 mt-3">
